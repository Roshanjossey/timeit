<%= semantic_form_for  @entry, :html => { :class => "form-inline" } do |f| %>
    <%= f.inputs do %>
        <%= f.input :user, :label => false, :include_blank => false %>
        <%= f.input :project, :label => false, :include_blank => false%>
        <%= f.input :date, :as => :date_picker, :label => false %>
        <%= f.input :duration ,:label => "Hours" %>
        <%= f.input :billable, :as => :boolean %>
        <%= f.input :description, :as => :string %>
    <% end %>
    <%= f.actions :submit, :cancel %>
<% end %>
